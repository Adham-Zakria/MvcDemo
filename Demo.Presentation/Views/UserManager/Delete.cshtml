@model IdentityUser
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <h1>Delete User</h1>

<div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

    <div class="row">
        
        <div class="form-group mb-3">
            <label class="form-label" asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Email"></label>
            <input asp-for="Email" class="form-control" readonly />
        </div>
        
    </div>
</div>

<div class="mt-4">
    <form method="post" asp-controller="UserManager" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <input type="submit" class="btn btn-danger" value="Delete" />
        <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
    </form>
</div> 
