@model UserDetailsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-0">User @Model.FirstName Details</h2>
<div class="tab-pane fade show active p-4 border " id="general" role="tabpanel" aria-labelledby="general-tab" >

    <div class="row ">
        
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" readonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" readonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" readonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="Roles"></label>
            <input asp-for="Roles" class="form-control" readonly />
        </div>

    </div>
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
    <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
</div>
