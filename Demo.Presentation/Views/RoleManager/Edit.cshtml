@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="col-8 my-4">Edit Role : @Model.RoleName</h2>

<div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
    <form method="post" asp-controller="RoleManager" asp-action="Edit" class="col-8">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group col-6">
            <label class="form-label" asp-for="Id"></label>
            <input asp-for="Id" class="form-control" readonly/>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label class="form-label" asp-for="RoleName"></label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        
        <div class="mt-4">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-controller="RoleManager" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>


@section ValidationScripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}