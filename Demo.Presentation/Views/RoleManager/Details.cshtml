@model RoleViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-0">Role @Model.RoleName Details</h2>
<div class="tab-pane fade show active p-4 border " id="general" role="tabpanel" aria-labelledby="general-tab">

    <div class="row ">

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="Id"></label>
            <input asp-for="Id" class="form-control" readonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="RoleName"></label>
            <input asp-for="RoleName" class="form-control" readonly />
        </div>
        

    </div>
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
    <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
</div>
